extends layoutBSMain

block content
  .jumbotron.jumbotron-fluid
    .container.col
      h1= title
      p.lead
        | Welcome to your kingdom


  form(method='post')
    .form-row
      .form-group.col-md-10
        .form-row
          .form-group.col-md-3
            label(for='inputPassword') New Password
            input(type='password', name='newPasscode' placeholder='Password')#inputPassword.form-control
          .form-group.col-md-3
            label(for='inputPassword1') Confirm Your New Password
            input(type='password', name='confirmPasscode', placeholder='Re-type Your Password')#inputPassword1.form-control
        .form-row
          .form-group.col-md-2
            label(for='inputFirstName') First Name
            input(type='text', name='firstName')#inputFirstName.form-control
          .form-group.col-md-1
            label(for='inputMiddle') Middle
            input(type='text', name='middleName')#inputMiddle.form-control
          .form-group.col-md-2
            label(for='inputLastName') Last Name
            input(type='text', name='lastName')#inputLastName.form-control
          .form-group.col-md-1
            label(for='inputGender') Gender
            select(name='gender')#inputGender.form-control
              option(selected='') Choose...
              option Male
              option Female
              option Others
          .form-group.col-md-1
            label(for='inputTitle') Title
            select(name='title')#inputTitle.form-control
              option(selected='') Choose...
              option Dr.
              option Mr.
              option Mrs.
              option Miss.
              option Ms.
        .form-row
          .form-group.col-md-1
            label(for='inputMonth') Birthday
            input(type='text', name='month', placeholder='MM')#inputMonth.form-control
          .form-group.col-md-1
            label(for='inputDate') &nbsp
            input(type='text', name='date', placeholder='DD')#inputDate.form-control
          .form-group.col-md-1
            label(for='inputYears') &nbsp
            input(type='text', name='years' placeholder='YYYY')#inputYears.form-control
        .form-row
          .form-group.col-md-3
            label(for='inputEmailAddress') Email Address
            input(type='text', name='emailAddress' placeholder='memorytrack@gmail.com')#inputEmailAddress.form-control
            small#emailHelp.form-text.text-muted We&apos;ll never share your information with anyone else.
          .form-group.col-md-3
            label(for='inputPhoneNumber') Phone Number
            input(type='text', name='phoneNumber' placeholder='123-456-7890')#inputPhoneNumber.form-control
        button
          |submit

        // Button trigger modal
        button.btn.btn-primary(type='button', data-toggle='modal', data-target='#exampleModal')
          | Update
        // Modal
        #exampleModal.modal.fade(tabindex='-1', role='dialog', aria-labelledby='exampleModalLabel', aria-hidden='true')
          .modal-dialog(role='document')
            .modal-content
              .modal-header
                h5#exampleModalLabel.modal-title Double-check
                button.close(type='button', data-dismiss='modal', aria-label='Close')
                  span(aria-hidden='true') &times;
              .modal-body
                | Are you sure all the information are true?
              .modal-footer
                button.btn.btn-secondary(type='button', data-dismiss='modal') Close
                button.btn.btn-primary(type='submit', data-dismiss='modal') Save changes


  .card(style='width: 30rem; height:15rem;')
    .card-body
      h5.card-title Your Personal Information
      h6.card-subtitle.mb-2.text-muted Update on:mm/dd/yyyy
      p.card-text
        | Your New Passcode: #{confirmPasscode}
        br
        | First Name: #{firstName}
        br
        | Middle: #{middleName}
        br
        | Last Name: #{lastName}
        br
        | Gender: #{gender}
        br
        | Birthday: #{month}/#{date}/#{years}
        br
        | Email Address: #{emailAddress}
        br
        | Phone Number: #{phoneNumber}
